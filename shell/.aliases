## Aliases added by Justine

alias rm='rm -i'

alias ls='ls -p'
alias la='ls -pA'
alias ll='ls -plhoT'
alias lt='ls -t'
alias lla='ls -pAlhoT'
alias tree='tree -CF --dirsfirst -L 2 -I "*.pyc|__pycache__"'
alias grep='grep --color'

alias dl='cd ~/Downloads'

alias vim='mvim -v'
alias vi='vim'

alias profz='vim ~/.zshrc'
alias profb='vim ~/.bash_profile'
alias profa='vim ~/.aliases'
alias profv='vim ~/.vimrc'
alias profenv='vim ~/.env'
alias sourceprof='source ~/.bash_profile'

export TODAY=$(date +%y%m%d)
alias today='rem -n | sort | grep $(date +%Y/%m/%d) | cut -d " " -f 2-'

export NOTES_DIR=~/Dropbox/notes
alias notes='cd $NOTES_DIR'
alias newnote='vim $NOTES_DIR/diary/$TODAY.md'
alias lastnote='notes && cd diary && vim $(ls -t | head -1)'

alias t='todo.sh -d /Users/jc5809/Applications/todo.txt_cli-2.10/todo.cfg'
alias todo='vim $TODO_DIR/todo.txt'

alias copyssh='cat ~/.ssh/id_rsa.pub | pbcopy'

