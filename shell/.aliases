export PROJECT_DIR=$HOME/Dropbox/Programming/Projects/
alias proj='cd $PROJECT_DIR && ls'
alias prog='cd ~/Dropbox/Programming && ls'

alias copy='tr -d "\n" | pbcopy'

alias hist='history'
alias chmodof='stat -f "%OLp"'
alias sizeof='du -h -d 1 -c' # See also ncdu installed with Homebrew
alias short='export PS1="$ "'
alias json='python -mjson.tool'
alias android-avd='~/Library/Android/sdk/tools/android avd'

alias up='cd ..'
alias upup='cd ../..'
alias back='cd -'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

alias startserver="python -m SimpleHTTPServer"

function clip { [ -t 0 ] && pbpaste || pbcopy; }

alias c='pygmentize -O style=manni -f console256 -g'
