

! config for urxvt terminal emulator

! aesthetics
urxvt*scrollBar: false
urxvt*font: xft:Inconsolata:size=14
urxvt*fading: 30

! transparency (fake)
urxvt*transparent: true
urxvt*shading: 15

! perl extensions
urxvt*perl-ext: default,url-select,clipboard

urxvt*keysym*Shift-Control-V: perl:clipboard:paste
urxvt*keysym*Shift-Control-C: perl:clipboard:copy

! make links clickable
URxvt.urlLauncher: firefox
URxvt.matcher.button: true
URxvt.perl-ext-common: matcher,readline

! disable the weird ctrl-shift default behaviour
urxvt*iso14755: false
urxvt*iso14755_52: false

! colorscheme
urxvt*foreground: white
urxvt*background: black

*color0:  #2E3436
*color1:  #a40000
*color2:  #4E9A06
*color3:  #C4A000
*color4:  #3465A4
*color5:  #75507B
*color6:  #ce5c00
*color7:  #babdb9
*color8:  #555753
*color9:  #EF2929
*color10: #8AE234
*color11: #FCE94F
*color12: #729FCF
*color13: #AD7FA8
*color14: #fcaf3e
*color15: #EEEEEC


